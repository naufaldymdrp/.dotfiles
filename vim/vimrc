vim9script

g:mapleader = ","
inoremap kj <Esc>
nnoremap <Leader>v <C-v>

# set timeout length
set timeoutlen=200

set number
set relativenumber

set mouse=a
set cursorline
set hlsearch # highlight search
highlight Cursorline cterm=NONE ctermbg=darkgrey
highlight Visual cterm=reverse ctermbg=NONE

# set terminal colors
set t_Co=256 # important for correct terminal colors
set background=dark
set termguicolors # set gui color for supported terminal

# for changing tab to tabspace and change existing tab to space
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set smarttab
retab

# show whitespace symbols
set listchars=tab:\ \ ,nbsp:Â·
set list

# set completion settings
set completeopt=menu,menuone,noselect

# enable filetype detection together with plugin and indentation
filetype plugin indent on

# for showing syntax
syntax on
syntax enable

# for statusline
set laststatus=2                # to always show statusline
set statusline=\ %f\ \|           # shows filename in statusline
set statusline+=\ FileType\:    # label
set statusline+=\ %y\ \|        # filename
set statusline+=%=
set statusline+=\|\ [\ Line:\ %l,\ %L\ ]\ \| # current line
set statusline+=\ (\ %l,\ %c\ )\ \|

set ruler
set rulerformat=%l,%v

var baw = "\|hello"
